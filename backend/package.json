{
  "name": "project",
  "version": "0.0.0",
  "description": "description",
  "author": "AleBlondin",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "nest build -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "build:migrations": "nest build -p tsconfig.migration.json",
    "premigration:generate": "yarn build:migrations",
    "migration:generate": ". ./.env.rc && typeorm migration:generate",
    "migration:revert": ". ./.env.rc && typeorm migration:revert",
    "premigration:run": "yarn build:migrations",
    "migration:run": ". ./.env.rc && typeorm migration:run",
    "migration:run:production": "typeorm migration:run",
    "test:migration:run": ". ./.env.test.rc && ts-node -r tsconfig-paths/register node_modules/.bin/typeorm migration:run",
    "schema:drop": ". ./.env.rc && typeorm schema:drop",
    "test:schema:drop": ". ./.env.test.rc && ts-node node_modules/.bin/typeorm schema:drop",
    "reset": "rm -rf node_modules && yarn install",
    "start": ". ./.env.rc && nest start -p ./tsconfig.json src/main.ts",
    "start:dev": "yarn start --watch",
    "start:debug": "yarn start:dev --debug",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint './**/*.{js,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "pretest": "yarn test:migration:run",
    "test": ". ./.env.test.rc && ts-node node_modules/.bin/jest * --maxWorkers=1",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:debug": "NODE_OPTIONS='--inspect-brk' yarn test",
    "test:e2e": ". ./.env.test.rc && ts-node node_modules/.bin/jest --config ./test/jest-e2e.json * --maxWorkers=1"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "^8.0.1",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.1",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.0.0",
    "@nestjs/typeorm": "^8.0.1",
    "@nestjsx/crud": "^4.6.2",
    "@nestjsx/crud-typeorm": "^4.6.2",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.4.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "cli-color": "^2.0.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/testing": "^8.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cli-color": "^2.0.1",
    "@types/cls-hooked": "^4.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^14.17.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "@types/serve-static": "1.13.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^helpers/(.*)": "<rootDir>/helpers/$1",
      "^auth/(.*)": "<rootDir>/modules/auth/$1"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
