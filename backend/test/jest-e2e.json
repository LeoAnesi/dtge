{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^helpers/(.*)": "<rootDir>/../src/helpers/$1",
    "^auth/(.*)": "<rootDir>/../src/modules/auth/$1",
    "^src/(.*)": "<rootDir>/../src/$1"
  }
}
